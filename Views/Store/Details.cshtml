@model WecareMVC.Models.Album
@{
    ViewBag.Title = "Title - " + Model.Title;
}
<div class="col-md-offset-1">
<h2 class="text-danger">Title - @Model.Title</h2>
<p>
    <img alt="@Model.Title"
         src="@Model.AlbumArtUrl" class="img-responsive" />
</p>

@*<dl class="dl--horizontal">*@
   
    <h4 class="text-primary">Genre：@Model.Genre.Name</h4>
    
    <h4 class="text-justify">Artist：@Model.Artist.Name</h4>
   
    <h4 class="text-success">Price：@Model.Price.ToString("c2")</h4>
   
    <span class="col-md-offset-4">
        @Html.ActionLink("Add To Cart", "AddToCart",
        "ShoppingCart", new { id = Model.AlbumId }, new { @class="h3 text-danger" })
</span>
@*</dl>*@

</div>